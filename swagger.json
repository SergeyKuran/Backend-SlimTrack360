          "name",
          "avatarUrl"
        ],
        "properties": {
          "sex": {
            "type": "string",
            "description": "User's gender",
            "enum": ["female", "male"],
            "example": "female"
          },
          "age": {
            "type": "integer",
            "description": "User's age",
            "example": 32
          },
          "height": {
            "type": "integer",
